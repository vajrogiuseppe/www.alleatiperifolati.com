{% extends 'base.twig' %}

{% block content %}
  {% include 'partial/header_page.twig' %}
  <div class="container-fluid mt-5 mb-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-12">
          <div class="row">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              {% for post in risorse %}
                <div class="col-4">
                  <div class="card border-0" id="{{ post.ID }}">
                    <a href="{{ post.link }}"><img class="card-img-top" src="{{ post.risorse.copertina.url }}" alt="{{ post.title }}" /></a>
                    <div class="card-body">
                      <h5 class="card-title fm-rale text-left rosso fw-bolder">{{ post.title }}</h5>
                      <div class="fm-roboto fs-small">{{ post.risorse.descrizione|raw }}</div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
            {% include 'partial/pagination.twig' %}
          </div>
        </div>
        <div class="col-12 col-md-4">
          <div class="row">
            <div class="lastpost">
              <h5 class="card-title fm-rale text-left rosso fw-bolder">Contenuti recenti</h5>
              {% set primo_scenario = scenari|first %}
              {% if primo_scenario %}
                <div class="card border-0">
                  <div class="card-body">
                    <a href="{{ primo_scenario.link }}"><img class="card-img-top img-item_last" src="{{ primo_scenario.scenario.copertina.url }}" alt="{{ primo_scenario.title }}" /></a>
                    <h5 class="card-title">{{ primo_scenario.title }}</h5>
                  </div>
                </div>
              {% endif %}

              {% set primo_video = video|first %}
              {% if primo_video %}
                <div class="card border-0">
                  <div class="card-body">
                    <a href="{{ primo_video.link }}"><img class="card-img-top img-item_last" src="{{ primo_video.video.copertina.url }}" alt="{{ primo_video.title }}" /></a>
                    <h5 class="card-title">{{ primo_video.title }}</h5>
                  </div>
                </div>
              {% endif %}

              {% set prima_risorsa = risorse|first %}
              {% if prima_risorsa %}
                <div class="card border-0">
                  <div class="card-body">
                    <a href="{{ prima_risorsa.link }}"><img class="card-img-top img-item_last" src="{{ prima_risorsa.risorse.copertina.url }}" alt="{{ prima_risorsa.title }}" /></a>
                    <h5 class="card-title">{{ prima_risorsa.title }}</h5>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
