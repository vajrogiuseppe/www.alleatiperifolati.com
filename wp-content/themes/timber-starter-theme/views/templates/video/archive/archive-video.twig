{% extends 'base.twig' %}

{% block content %}
  {% include 'partial/header_page.twig' %}
  <div class="container-fluid mt-5 mb-5">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h3 class="rosso fm-rale fw-bolder">Videopillole</h3>
        </div>
        <div class="col-md-8 col-12">
          <div class="row">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              {% for post in video %}
                <div class="col-4">
                 <a href="{{ post.link }}">
                  <div class="card border-0" id="{{ post.ID }}">
                   
                      <div class="ratio ratio-16x9">
                        <iframe src="{{ post.video.linkvideo }}" allowfullscreen></iframe>
                      </div>
                    
                    <div class="card-body">
                      <h5 class="card-title fm-rale text-left rosso fw-bolder">{{ post.title }}</h5>
                      <p class="autor_archive fm-roboto">A cura di: {{ post.video.autore['0']|default('Nessun autore specificato') }}</p>
                    </div>
                  </div>
                  </a>
                </div>
              {% endfor %}
            </div>
            {% include 'partial/pagination.twig' %}
          </div>
          <div class="row mt-5">
            <div class="col-12 mt-3">
              <h3 class="rosso fm-rale fw-bolder">Videopillole</h3>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-4">
          <div class="row">
            <div class="lastpost">
              <h5 class="card-title fm-rale text-left rosso fw-bolder">Contenuti recenti</h5>
              {% for ultimopost in scenari %}
                <div class="card border-0">
                  <div class="card-body">
                    <a href="{{ post.link }}"><img class="card-img-top img-item_last" src="{{ ultimopost.scenario.copertina.url }}" alt="{{ post.title }}" /></a>
                    <h5 class="card-title">{{ ultimopost.title }}</h5>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}