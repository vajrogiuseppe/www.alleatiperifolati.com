<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <div class="navmenu">
      {% if items %}
        <ul class="navbar-nav headermenu">
          {% for subitem in items %}
            <li class="nav-item">
              <a href="{{ subitem.link }}" target="{{ subitem.target }}" class="nav-link customcolor">{{ subitem.title }}</a>
              {% if subitem.children %}
                {% include 'menu.twig' with { items: subitem.children } %}
              {% endif %}
            </li>
          {% endfor %}
          <div class="d-lg-none accedi_icon">
            <span class="navbar-text ms-2"><i class="bi bi-person"></i> Accedi</span>
          </div>
        </ul>
      {% endif %}
    </div>
  </div>
</nav>
